<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    tools:context=".PerfilPublico"
    android:backgroundTint="@color/colorApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/foto_usuario"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/usuarioperfil" />

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foto_usuario"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="2dp"
                android:text="Nombre"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_apellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foto_usuario"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/tv_nombre"
                android:text="Apellido"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_municipi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nombre"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Municipi"
                android:textColor="@color/white"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/tv_edat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"

                android:text="Edat"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frase_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_municipi"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="4dp"
                android:text="Descripció: "
                android:textColor="@color/white"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/frase_descripcion"
                android:text="Descripció: "
                android:textColor="@color/white"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/frase_actividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_descripcion"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="Les activitats que més m'agraden son:"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_activitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frase_actividad"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Escrito "
                android:textColor="@color/white"
                android:textSize="21dp" />
            <TextView
                android:id="@+id/frase_cobles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_activitat"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="Les cobles que més m'agraden son:"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cobles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frase_cobles"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Escrito "
                android:textColor="@color/white"
                android:textSize="21dp" />

            <CheckBox
                android:id="@+id/cb_coche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Coche"
                android:textColor="@color/white"
                android:textSize="21dp"
                android:enabled="false"/>

            <Button
                android:id="@+id/bt_contactar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/black"
                android:onClick="Contacte"
                android:text="Contactar"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                />

        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>